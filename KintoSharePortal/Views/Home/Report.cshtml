@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "REPORT";
}
<h2>@ViewBag.Title</h2> 
<h3>@ViewBag.Message</h3>
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    REPORT
                </h2>
            </div>
            <div class="body">
                <form class="row g-3">
                    @Html.AntiForgeryToken()
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                    {
                        <div class="row clearfix">
                            <div class="col-lg-3">
                                <p>
                                    <b>Type</b>
                                </p>
                                <select class="form-control bootstrap-select show-tick" name="reporttype" id="reporttype" onchange="Control.ReportType(this)">
                                    <option value="asset">Asset</option>
                                    <option value="user">User</option>
                                </select>
                            </div>
                            <div class="col-lg-3">
                                <p>
                                    <b>Booking Periode From :</b>
                                </p>
                                <div class="btn-group bootstrap-select form-control show-tick dropup">
                                    <input type="date" class="form-control" id="Startdate">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <p>
                                    <b> To :</b>
                                </p>
                                <div class="btn-group bootstrap-select form-control show-tick">
                                    <input type="date" class="form-control" id="Enddate">
                                </div>
                            </div>
                            <div class="col-lg-3">
                                <br />
                                <button type="button" class="btn btn-primary btn-block" id="btnsearch">Search</button>
                            </div>
                        </div>
                        <div class="row clearfix">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <div class="col-md-3">
                                        @*<button type="button" id="btExportExcel" class="btn green">
                                <i class="fa fa-cloud-download"></i> Export To Excel
                            </button>*@
                                        <a href="#" class="js-export btn btn-danger btn-xs" id="btExportExcel">Export to Excel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="content">
                            <div style="height: auto;width: 100%;margin: 0px auto">
                                <table class="table table-bordered table-hover text-nowrap" style="width:100%" id="tblBookHeader" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>BOOK NO.</th>
                                            <th>ASSET</th>
                                            <th>PLAT NO.</th>
                                            <th>DEPARTMENT</th>
                                            <th>PIC</th>
                                            <th>BOOK DATE</th>
                                            <th>BOOK FREQ.</th>
                                            <th>BOOK STATUS</th>
                                            <th>REQUESTER</th>
                                            <th>PURPOSE</th>
                                            <th>REQUEST DATE</th>
                                            <th>KINTO SHARE FEE</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div id="divReportUser">
                            <div style="height: auto;width: 100%;margin: 0px auto">
                                <table class="table table-striped table-bordered dt-responsive table-hover nowrap" style="width:100%" id="tblBookUser" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>BOOK NO.</th>
                                            <th>BOOK DATE</th>
                                            <th>START DATE</th>
                                            <th>END DATE</th>
                                            <th>REVENUE</th>
                                            <th>KINTO SHARE FEE</th>
                                            <th>CHARGE</th>
                                            <th>USER</th>
                                            <th>PIC</th>
                                            <th>DEPARTMENT</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color: orangered;">Attention!!</h4>
            </div>
            <div class="modal-body">
                @*<p>Some text in the modal.</p>*@
                <label id="modaltext"></label>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script src="@Url.Content("~/Scripts/KintoShare/Report.js")" type="text/javascript"></script>
}