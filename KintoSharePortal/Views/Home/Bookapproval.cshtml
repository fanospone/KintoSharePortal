@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Booking Approval";
}
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bsb/plugins/jquery-dataTables/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/GlobalConfig.js"></script>
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<meta charset="utf-8" />
@model KintoSharePortal.Domain.Models.trxKintoSharePortalAsset
<link href="~/Content/jquery-ui.multidatespicker.css" rel="stylesheet" />
<div class="row clearfix" id="pnlapprovalhead">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    APPROVAL
                </h2>
            </div>
            <div class="body">
                <form class="row g-3">
                    @Html.AntiForgeryToken()
                    <div id="content">
                        <div style="height: auto;width: 100%;margin: 0px auto">
                            <table class="table table-striped table-bordered dt-responsive nowrap" style="width:100%" id="tblApprovalHeader" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th class="text-center">ID</th>
                                        <th class="text-center">BOOK NO.</th>
                                        <th class="text-center">ASSET</th>
                                        <th class="text-center">PLAT NO.</th>
                                        <th class="text-center">DEPARTMENT</th>
                                        <th class="text-center">PIC</th>
                                        <th class="text-center">BOOK DATE</th>
                                        <th class="text-center">REQUESTER</th>
                                        <th class="text-center">KINTO SHARE FEE</th>
                                        <th class="text-center">STATUS</th>
                                        @*<th class="text-center">ACTION</th>*@
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="row clearfix" id="pnlapprovaldetail">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    APPROVAL DETAIL
                </h2>
            </div>
            <div class="body">
                <form class="row g-3">
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <p>
                                <b> Book No</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtBookno" name="txtBookno" disabled="disabled">*@
                            <label id="txtBookno" class="form-control" disable="true" />
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <b>Vechile</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtvachile" name="txtvachile" disabled="disabled">*@
                            <label id="txtvachile" class="form-control" disable="true" />
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <p>
                                <b> Licence Plat No</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtplat" name="txtplat" disabled="true">*@
                            <label id="txtplat" class="form-control" disable="true" />
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <b>Department</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtdept" name="txtdept" disabled="disabled">*@
                            <label id="txtdept" class="form-control" disable="true" />
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <p>
                                <b> PIC</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtPIC" name="txtPIC" disabled="disabled">*@
                            <label id="txtPIC" class="form-control" disable="true" />
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <b>Requester</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtreq" name="txtreq" disabled="disabled">*@
                            <label id="txtreq" class="form-control" disable="true" />
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <p>
                                <b> Book Date</b>
                            </p>
                            @*<input type="text" class="form-control" id="txtBookdate" name="txtBookdate" disabled="disabled">*@
                            <label id="txtBookdate" class="form-control" disable="true" />
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <b>Approval Status </b>
                            </p>
                            @*<input type="text" class="form-control" id="txtstatus" name="txtstatus" disabled="disabled">*@
                            <label id="txtstatus" class="form-control" disable="true" />
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-6">
                            <p>
                                <b>Kinto Share Fee </b>
                            </p>
                            <label id="txtKintoShareFee" class="form-control" disable="true" />
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <button type="button" class="btn bg-teal btn-block btn-lg waves-effect" id="btnApprove" value="Approve">APPROVE</button>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <button type="button" class="btn bg-teal btn-block btn-lg waves-effect" id="btnCancel" value="Cancel">REJECT</button>
                        </div>
                    </div>
                    <div class="row clearfix">
                        <div class="col-lg-12">
                            <button type="button" class="btn bg-teal btn-block btn-lg waves-effect" id="btnBack">BACK</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section scripts
    {
    <script src="@Url.Content("~/Scripts/KintoShare/BookApproval.js")"></script>
    <script type="text/javascript" src="~/Content/bsb/plugins/sweetalert/sweetalert.min.js"></script>
}
